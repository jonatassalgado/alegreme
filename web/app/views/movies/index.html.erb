<section class="me-page is-animated">

	<%= notice %>

	<% content_for :meta_title, "Filmes no Cinema em Porto Alegre" %>

	<div class="me-page__section">
		<div class="me-page__section-title">
			<h2>Filmes populares nos últimos 30 dias</h2>
		</div>
	</div>

	<% if current_user %>
		<section class="me-section me-section--condensed">
			<div class="me-section__inner">
				<%= render partial: 'feeds/saves', layout: 'components/stimulus_container',
									 locals:  {
											 user:            current_user,
											 identifier:      'movies_saved',
											 html:            {
													 data: {
															 controller: 'saves',
															 target:     'saves.saves'
													 }
											 },
											 saved_resources: @saved_movies,
											 empty_message:   'Salve filmes com ❤ para vê - los aqui'
									 } %>
			</div>
		</section>
	<% end %>

	<%= render(partial:    'components/collection/movies/collection',
						 layout:     'components/section',
						 collection: @movies_group,
						 as:         :collection,
						 locals:     {
								 html: {
										 css: 'me-section--condensed'
								 },
								 user: current_user
						 }) %>


</section>
