<%= turbo_frame_tag dom_id(screening_group), class: 'p-3 bg-white rounded border' do %>
	<h3 class="inline c-h4">
		<%= day_of_week(screening_group.date).titleize %>
	</h3>
	<span class="text-xs text-gray-800"><%= screening_group.date.strftime('%d/%m/%y') %></span>
	<div class="float-right -mt-1 -mr-2 w-content">
		<%= button_to like_screening_group_path(screening_group) do %>
			<svg class="<%= class_names 'h-4 stroke-current group-hover:text-brand-600',
																	{ 'text-gray-500':               !user&.like?(screening_group),
																		'text-brand-600 fill-current': user&.like?(screening_group) } %>" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
			</svg>
		<% end %>
	</div>
	<div class="mt-3 space-y-1">
		<% screening_group.screenings.filter { |s| s.times&.any? }.each do |screening| %>
			<div class="">
				<div class="text-xs">
					<%= screening.language %>
					<span class="text-gray-500 text-xxs"><%= screening.screen_type %></span>
				</div>
				<div class="flex flex-wrap mt-1">
					<% screening.times&.each do |time| %>
						<div class="py-1 px-2 mr-1 mb-1 text-xs text-gray-800 bg-gray-100 rounded-full w-content">
							<%= time %>
						</div>
					<% end %>
				</div>
			</div>
		<% end %>
	</div>
<% end %>