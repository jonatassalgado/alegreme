<section class="is-animated md:mt-32 min-h-screen mt-3 mb-24">

	<% content_for :canonical_url, organizer_url(@organizer, format: :html) %>
	<% content_for :meta_title, "Eventos por #{@organizer.details_name} em Porto Alegre | Alegreme.com" %>
	<% content_for :back_button, true %>
	<% content_for :top_app_bar_title, truncate(@organizer.details_name, length: 30) %>

	<%= notice %>

	<script type="application/ld+json">
  [
    <%= render partial: 'layouts/json_ld', collection: @events, as: :event %>
  ]
	</script>

	<div class="is-animated md:w-9/12 mx-auto sm:container space-y-3">
		<div class="bg-white mx-3 px-8 py-3 rounded-md shadow-sm space-y-3 text-center">
			<div>
				<div class="flex-1 font-bold group-hover:text-green-500 leading-6 md:leading-normal md:pl-0 md:text-5xl text-2xl text-gray-700">
					<%= @organizer.details_name %>
				</div>
			</div>
			<div>
				<%= render partial: 'components/follow/follow_button', locals: {
						user:       current_user,
						followable: @organizer
				} %>
			</div>
		</div>

		<%= render partial: 'events/group_by_day_list', locals: {
				events: @upcoming_events,
				user:   current_user
		} %>

	</div>

</section>
