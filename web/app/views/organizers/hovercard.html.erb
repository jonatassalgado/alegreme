<div data-hovercard-target="inner" class="md:w-64 transition-all transform fixed bottom-0 left-0 z-50 p-3 mx-0 space-y-3 bg-white rounded-lg border md:-mx-2 md:absolute md:bottom-3 min-w-max-content shadow-t-2xl md:shadow-xl">
	<div class="flex items-start items-center space-x-2 justify-between md:flex-row md:items-center md:mb-0">
		<div class="flex space-x-5">
			<%= image_tag shrine_image_url(@organizer, :sm), {
				loading: :lazy,
				class:   'border border-gray-100 flex-shrink-0 h-12 max-w-xs mx-auto rounded-full shadow-sm w-12',
				onerror: "this.style.opacity='0'"
			} if @organizer.image_data? %>
			<div class="flex-grow">
				<h4 class="mb-1 c-h3">
					<%= @organizer.details_name %>
				</h4>
				<%= render(FollowButtonComponent.new(
					user:       current_user,
					followable: @organizer
				)) %>
			</div>
		</div>
	</div>
</div>
