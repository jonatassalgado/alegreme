<div id="sheet" data-controller="sheet">
	<% if sheet && friend %>
		<div id="sheet-content" data-sheet-target="content" class="fixed top-0 left-0 z-50 w-screen h-screen">
			<div data-sheet-target="overlay" data-action="click->sheet#close" class="w-full h-full bg-black opacity-50">
			</div>
			<div class="absolute bottom-0 flex flex-col w-screen p-5 pb-8 space-y-5 bg-white rounded-t-lg h-content">
				<div id="<%= dom_id(friend, :sheets_friendships_edit_action) %>" class="flex items-center space-x-5 font-medium">
					<svg class="<%= class_names('fill-current h-6',
																			{'text-gray-500':  user.friendship_accepted?(friend),
																			 'text-green-400': !user.friendship_accepted?(friend)}) %>" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
						<g>
							<rect fill="none" height="24" width="24"/>
						</g>
						<g>
							<path d="M14,8c0-2.21-1.79-4-4-4S6,5.79,6,8s1.79,4,4,4S14,10.21,14,8z M17,10v2h6v-2H17z M2,18v2h16v-2c0-2.66-5.33-4-8-4 S2,15.34,2,18z"/>
						</g>
					</svg>
					<% if user.friendship_accepted? friend %>
						<div data-reflex="click->Friendship#friendship"
								 data-reflex-root="#page"
								 data-user-id="<%= user.id %>"
								 data-friend-id="<%= friend.id %>"
								 data-friendship-action="cancel">
							Cancelar amizade com <%= friend.first_name %>
						</div>
					<% else %>
						<div class="text-green-500">
							Amizade com <%= friend.first_name %> cancelada
						</div>
					<% end %>
				</div>
			</div>
		</div>
	<% end %>
</div>