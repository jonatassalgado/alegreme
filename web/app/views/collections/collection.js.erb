(function () {

	const promise = new Promise(function (resolve, reject) {
		const sectionElem = document.getElementById('<%= @data[:identifier] %>');

		requestIdleCallback(function () {
			requestAnimationFrame(function () {
				const morph = morphdom.default(sectionElem, '<%= j render partial: "components/collection/collection", locals: {data: @data, props: @props} %>'.trim(), {
					onBeforeElUpdated: function (fromEl, toEl) {
						if (fromEl.dataset.fixed == 'true') {
							return false
						}

						if (fromEl.isEqualNode(toEl)) {
							return false
            }

						return true
					}
				});
				resolve(morph)
			});
		}, {timeout: 250});
	})

	promise.then(function (value) {
		PubSubModule.emit('<%= @data[:identifier] %>.updated', {
			itemsCount: <%= @data[:collection][:detail][:total_events_in_collection] %>,
			params    : {
				similar: <%= @data[:similar] || {} %>
			}
		})
	})

})()
