
<p id="notice"><%= notice %></p>
<% if current_user && current_user.admin? %>
  <a href="<%= @event.url %>/edit">Editar</a>
  <a href="/train">Treinar</a>
<% end %>
<div id="event" class="me-card me-card--single mdc-card event-<%= @event.id %>"
     data-controller="event"
     data-target="event.event"
     data-event-favorited="<%= current_user and current_user.taste_events_saved?(@event.id) if current_user and current_user %>"
     data-event-identifier="<%= @event.id %>"
     data-event-modifier="single">
  <div class="mdc-card__media mdc-card__media--16-9" style="<%= get_image_style_attr @event, :single %>">
    <% if current_user %>
      <div class="me-card__like-button" data-action="click->event#like">
        <div data-target="event.like">
          <button data-target="event.likeButton" id="add-to-favorites"
                  class="me-icon-button mdc-icon-button <%= 'mdc-icon-button--on' if current_or_guest_user.taste_events_saved?(@event.id) %>"
                  aria-label="Add to favorites" aria-hidden="true" aria-pressed="false">
            <i class="material-icons-sharp mdc-icon-button__icon mdc-icon-button__icon--on">mood</i>
            <i class="material-icons-sharp mdc-icon-button__icon">sentiment_satisfied</i>
          </button>
        </div>
      </div>
    <% end %>
  </div>
  <div class="me-card__content">
    <h2 class="mdc-card__name mdc-typography--headline6">
      <%= @event.details_name %>
    </h2>
    <div class="me-card__organizer" data-target="event.organizer">
      <%= render partial: 'components/follow/follow-chip-set', locals: { user: current_user, chips: @event.categories, type: 'categories' } %>
    </div>
    <div class="me-card__organizer" data-target="event.organizer">
      <%= render partial: 'components/follow/follow-chip-set', locals: { user: current_user, chips: @event.organizers, type: 'organizers' } %>
    </div>
    <div class="me-card__ocurrence">
      <b>Quando:</b> <%= "#{@event.day_of_week['decorator']} (#{@event.day_of_week['string']})" %>
    </div>
    <div class="me-card__place">
      <% if @event.place %>
        <b>Local:</b> <%= @event.place_details_name %><br>
        <b>EndereÃ§o:</b> <%= @event.geographic['address'] %><br>
      <% end %>
    </div>
    <div class="me-card__description">
      <%= @event.details_description.html_safe %><br>
    </div>
  </div>
</div>

<ul>
  <% @event.similar_data.each do |similar| %>
    <li><%= Event.find(similar).details_name %></li>
  <% end %>
</ul>
