          <defs>
            <linearGradient id="paint0_linear" x1="28.5492" y1="29.6745" x2="3.04919" y2="1.1745" gradientUnits="userSpaceOnUse">
              <stop offset="0.230508" stop-color="#FEE103"/>
              <stop offset="1" stop-color="white"/>
            </linearGradient>
          </defs>
        </svg>
        <div class="brand__pimba js-pimba" style="opacity: 0;">Pimba</div>
      </div>
    </section>
  </section>

</div>