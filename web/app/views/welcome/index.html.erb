      <div class="android__screen">
        <video loop="true" muted="true">
          <source src="<%= asset_url 'welcome/demo-android-min.webm' %>" type="video/webm">
          <source src="<%= asset_url 'welcome/demo-android-min.mp4' %>" type="video/mp4">
        </video>
      </div>
    </div>
