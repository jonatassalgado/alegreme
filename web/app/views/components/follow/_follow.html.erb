<%

  raise ArgumentError unless data

  data = {
      identifier:        false,
      user:              nil,
      type:              nil,
      event_id:          nil,
      expand_to_similar: false,
      chips:             nil
  }.deep_merge!(data)

%>

<div class="me-follow-chip-set mdc-chip-set"
     data-controller="follow-chipset"
     data-target="follow-chipset.chipset"
     data-follow-chipset-similar-to="<%= data[:event_id] %>"
     data-follow-chipset-expand-to-similar="<%= data[:expand_to_similar] %>"
     id="<%= data[:identifier] ? data[:identifier] : "follow-chip-set__#{data[:type]}-#{data[:event_id]}" %>">

  <%= render partial:    'components/follow/follow-chip-set',
             collection: data[:chips],
             as:         :followable,
             locals:     {
                 user: data[:user],
                 type: 'organizers'
             } %>
</div>
