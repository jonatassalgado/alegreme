<div class="py-1 mt-2 bg-white shadow-sm is-animated mb-20 md:mt-32">

	<%= notice %>

	<% unless @events&.suggestions.blank? %>
		<div class="px-5 mx-auto mb-10 md:px-0 md:w-9/12">
			<h2 class="font-semibold text-gray-800">VocÃª quis dizer?</h2>
			<% @events&.suggestions&.each do |suggestion| %>
				<a href="<%= search_index_path({q: suggestion}) %>" class="me-chip mdc-chip">
					<span class="inline-block px-4 py-2 mt-2 mr-2 text-gray-800 rounded-full bg-gray-50 hover:bg-gray-50"><%= suggestion %></span>
				</a>
			<% end %>
		</div>
	<% end %>

	<% if @events.try { |events| events.size > 0 } %>
		<%= render partial: 'events/group_by_day_list', locals: {
				events: @events,
				user:   current_user
		} %>
	<% elsif @events.try { |events| events.size == 0 } %>
		<h2 class="text-2xl">Nenhum evento encontrado. <%= link_to 'Veja todos os eventos', feed_path %>.</h2>
	<% elsif @categories.present? %>
		<div class="mx-auto md:w-9/12">
<!--			<h2 class="flex-1 pl-5 text-xl font-bold leading-6 text-gray-400 group-hover:text-green-500 md:leading-normal md:pl-0 md:text-5xl">-->
<!--				Categorias-->
<!--			</h2>-->
			<div class="grid grid-cols-2 gap-3 px-5 mt-5 md:px-0">
				<% @categories.each do |category| %>
					<a href="<%= category_events_path category %>" class="antialiased bg-gray-50 cursor-pointer duration-200 flex h-20 inline-block justify-start mdc-chip me-chip px-4 py-1 rounded-lg select-none tap-highlight-none transform transition-colors w-full">
						<div class="text-lg font-semibold text-gray-400">
							<%= category %>
						</div>
					</a>
				<% end %>
			</div>
		</div>
	<% end %>
</div>
