<% content_for :meta_title, "Eventos em Porto Alegre esta semana - (#{I18n.l(Date.today, format: :short)}) até #{I18n.l(Date.today + 6, format: :week)} (#{I18n.l(Date.today + 6, format: :short)})" %>
<% content_for :meta_description, "Descubra as festas, shows, feiras, teatros, palestras, festivais, exposições e filmes que acontecem esta semana (#{I18n.l(Date.today, format: :short)}) até #{I18n.l(Date.today + 6, format: :week)} (#{I18n.l(Date.today + 6, format: :short)})." %>

<script type="application/ld+json">
  [
    <%= render partial: 'layouts/json_ld.html.erb', collection: @collection[:events], as: :event %>
  ]

</script>


<div class="me-list me-list--events">
  <h1 class="title">Eventos acontecendo esta semana em Porto Alegre</h1>
  <div class="description">
    <%= "Explore os #{@collection[:detail][:total_events_in_collection]} eventos que ocorrem hoje (#{I18n.l(Date.today, format: :short)}) até #{I18n.l(Date.today + 6, format: :week)} (#{I18n.l(Date.today + 6, format: :short)}) em Porto Alegre - RS" %>
  </div>
  <amp-list binding="no"
            height="300"
            load-more="auto"
            src="<%= api_week_events_path format: :json %>">
    <div overflow
         role="button"
         aria-label="Show more"
         class="list-overflow">
      Show more
    </div>
    <template type="amp-mustache">
      <div class="item">
        <a href="{{url}}.amp">
          <amp-img height="1"
                   layout="responsive"
                   class="me-event__cover"
                   alt="{{name}}"
                   src="{{cover}}"
                   width="1.66"></amp-img>
          <div class="labels">
            <span class="category">
              {{category}}
            </span>
            ·
            <span class="date">
              {{date}}
            </span>
          </div>
          <h2 class="title">
            {{name}}
          </h2>
        </a>
        <div class="place">
          <a href="{{place.url}}">
            {{place.name}}
          </a>
        </div>
      </div>
    </template>
  </amp-list>
</div>
