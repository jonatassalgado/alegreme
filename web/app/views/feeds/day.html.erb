<section class="mt-32 min-h-screen is-animated">

	<% content_for :canonical_url, city_events_url %>
	<%# content_for :amp_url, week_events_url(format: :amp) %>

	<%= notice %>

	<% content_for :meta_title, "Eventos em Porto Alegre que ocorren dia #{I18n.l(@day, format: :short)}" %>
	<% content_for :meta_description, "Descubra as festas, shows, feiras, teatros, palestras, festivais, exposições e filmes que ocorrem no dia #{I18n.l(@day, format: :long)}" %>

	<script type="application/ld+json">
  [<%= render partial: 'layouts/json_ld', collection: @events, as: :event %>]
	</script>

	<div class="md:w-9/12 mx-auto">
		<%= render partial: "components/collection/events/collection",
							 locals:  {
									 identifier:       'day',
									 user:             current_user,
									 items:            @events.limit(session[:stimulus][:limit]),
									 total_count:      @events.size,
									 title:            {
											 principal: "Eventos em Porto Alegre que ocorren dia #{I18n.l(@day, format: :long)}",
											 secondary: "Acontecem #{@events.size} eventos neste dia"
									 },
									 categories:       @events.map { |event| event.categories_primary_name }.flatten.uniq,
									 infinite_scroll_vertical:  true,
									 display_if_empty: true,
									 show_similar_to:  session[:stimulus][:show_similar_to],
									 html: {
											 grid: {
													 css: 'md:gap-5 md:grid md:grid-cols-4 md:grid-flow-row md:overflow-x-visible md:pl-0 md:row-gap-16 md:space-y-0 pb-2 px-5 space-y-5'
											 }
									 }
							 } %>
	</div>


</section>
