<div data-controller="slider" data-slider-distance-value="400" class="relative">
	<div class="hidden absolute top-0 left-0 z-20 items-center w-2 h-full select-none md:flex">
		<div data-slider-target="left" data-action="click->slider#left mouseenter->hovercard#hide" class="hidden my-auto -ml-5 bg-white rounded-full border shadow-lg transition-colors duration-200 cursor-pointer hover:bg-brand-200 hover:border-brand-200 text-brand-700">
			<svg xmlns="http://www.w3.org/2000/svg" class="p-2 w-10 h-10 fill-current" viewBox="0 0 20 20" fill="currentColor">
				<path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
			</svg>
		</div>
	</div>
	<div class="hidden absolute top-0 right-0 z-20 items-center w-3 h-full select-none md:flex">
		<div data-slider-target="right" data-action="click->slider#right mouseenter->hovercard#hide" class="my-auto -ml-2 bg-white rounded-full border shadow-lg transition-colors duration-200 cursor-pointer hover:bg-brand-200 hover:border-brand-200 text-brand-700">
			<svg xmlns="http://www.w3.org/2000/svg" class="p-2 w-10 h-10 fill-current" viewBox="0 0 20 20" fill="currentColor">
				<path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
			</svg>
		</div>
	</div>
	<div data-slider-target="scroller" class="px-5 md:px-0 scrollx">
		<div class="flex space-x-5 w-content">
			<div class="w-80 md:w-128">
				<div class="sticky left-0 c-h2 w-content">Principais categorias</div>
				<div class="grid grid-cols-3 gap-3 mt-3 text-sm md:text-base">
					<% @categories.select { |cat| ['show', 'party', 'theatrical_show', 'street_fair', 'return_trip'].include?(cat.details_name) }.sort_by { |cat| cat.details_display_name }.each do |category| %>

						<%= link_to category_events_path(category: category.details_url),
												data:  { 'slider-target': 'item' },
												class: class_names('group relative w-full rounded-lg border p-3',
																					 { 'text-brand-600 bg-brand-100 border-brand-300':                                 @category == category,
																						 'text-gray-700 hover:text-brand-600 hover:bg-brand-100 hover:border-brand-300': @category != category }) do %>
							<div class="space-y-1">
								<div class="text-lg"><%= category.details_emoji %></div>
								<div><%= category.details_display_name %></div>
							</div>
							<div class="flex absolute top-2 right-2 justify-center items-center w-6 h-6 bg-gray-100 rounded-full group-hover:text-brand-600 group-hover:bg-brand-200 text-xxs">
								<%= category.active_events_count %>
							</div>
						<% end %>
					<% end %>
					<%= link_to cinemas_path,
											class: class_names('w-full rounded-lg border p-3 text-gray-700 hover:text-brand-600 hover:bg-brand-100 hover:border-brand-300',
																				 { 'text-brand-600 bg-brand-100 border-brand-300':                                 current_page?("/porto-alegre/cinemas"),
																					 'text-gray-700': current_page?("/porto-alegre/cinemas") }) do %>
						<div class="space-y-1">
							<div class="text-lg">ðŸŽ¥ðŸŽ¬</div>
							<div>Cinemas</div>
						</div>
					<% end %>
				</div>
			</div>
			<div>
				<div class="sticky left-0 c-h2 w-content">Mais categorias</div>
				<div class="grid grid-rows-4 grid-flow-col gap-3 pr-5 mt-3 text-sm md:text-base">
					<% @categories.reject { |cat| ['show', 'party', 'theatrical_show', 'street_fair'].include?(cat.details_name) }.sort_by { |cat| cat.details_display_name }.each do |category| %>

						<%= link_to category_events_path(category: category.details_url),
												data:  {},
												class: class_names('group w-full rounded-lg border px-3 py-2',
																					 { 'text-brand-600 bg-brand-100 border-brand-300':                                 @category == category,
																						 'text-gray-700 hover:text-brand-600 hover:bg-brand-100 hover:border-brand-300': @category != category }) do %>
							<div class="flex">
								<%= category.details_display_name %>
								<div class="flex justify-center items-center ml-2 w-6 h-6 bg-gray-100 rounded-full group-hover:text-brand-600 group-hover:bg-brand-200 text-xxs">
									<%= category.active_events_count %>
								</div>
							</div>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>