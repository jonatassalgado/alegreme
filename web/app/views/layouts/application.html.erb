  <link rel="apple-touch-icon" href="<%= image_url 'icons/launcher-icon-180x180.png' %>">

  <%= favicon_link_tag 'https://alegreme.sfo2.digitaloceanspaces.com/stable-images/favicon-48x48.png', {sizes: "48x48", type: "image/png"} %>
