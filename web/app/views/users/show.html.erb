<section class="me-page me-page--profile is-animated">

  <%= notice %>

  <% content_for :meta_title, "#{@user.first_name} | Alegreme.com" %>

  <div class="me-user-profile me-section">
    <% if @user.picture %>
      <img class="me-user-profile__picture" src="<%= @user.picture %>" alt="<%= @user.first_name %>">
    <% end %>
    <h1 class="me-user-profile__name">
      <%= @user.first_name %>
    </h1>
  </div>

  <section class="me-section">
    <div class="me-section__inner">
      <h2>Tópicos que você segue</h2>
      <div class="is-horizontal-scrollable">
        <%= render partial: 'components/follow/follow', locals: {
          data: {
            identifier: 'follows-by-user',
            chips: @user.following_topics,
            user:  @user
          }
        } %>
      </div>
    </div>
  </section>

  <section class="me-section">
    <div class="me-section__inner">
      <%= render partial: "components/collection/collection", locals: { data: @data } %>
    </div>
  </section>

</section>
