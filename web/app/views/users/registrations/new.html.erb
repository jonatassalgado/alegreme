<section class="mt-12 md:mt-20 is-animated">
	<div class="px-5 md:w-4/12 md:mx-auto tap-highlight-none">
		<div class="inline-block w-screen p-5 mb-3 -ml-5 text-sm antialiased text-gray-600 bg-gray-50 md:mx-0 md:rounded-lg md:w-full">
			Já tem uma
			conta? <%= link_to 'Faça login', new_user_session_path, class: "border inline-block ml-1 px-2 py-1 rounded-full cursor-pointer" %>
		</div>

		<% if alert %>
			<div class="py-5">
				<%= alert %>
			</div>
		<% end %>

		<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'me-form'}) do |f| %>
			<%= devise_error_messages! %>

			<div data-gtm-action="view" data-gtm-category="Funil" data-gtm-label="Criar conta">
				<div class="my-2 space-y-2 select-none">
					<%= link_to user_google_oauth2_omniauth_authorize_path, data: { controller: 'ripple', 'gtm-action': 'click', 'gtm-category': 'Funil', 'gtm-label': 'Fazer login com gmail' }, class: "ripple ripple-black relative overflow-hidden cursor-pointer shadow-sm border font-semibold inline-flex items-center px-5 py-3 rounded-lg w-full text-gray-700" do %>
						<svg class="w-5 h-5 mr-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 533.5 544.3">
							<path d="M533.5 278.4c0-18.5-1.5-37.1-4.7-55.3H272.1v104.8h147c-6.1 33.8-25.7 63.7-54.4 82.7v68h87.7c51.5-47.4 81.1-117.4 81.1-200.2z" fill="#4285f4"/>
							<path d="M272.1 544.3c73.4 0 135.3-24.1 180.4-65.7l-87.7-68c-24.4 16.6-55.9 26-92.6 26-71 0-131.2-47.9-152.8-112.3H28.9v70.1c46.2 91.9 140.3 149.9 243.2 149.9z" fill="#34a853"/>
							<path d="M119.3 324.3c-11.4-33.8-11.4-70.4 0-104.2V150H28.9c-38.6 76.9-38.6 167.5 0 244.4l90.4-70.1z" fill="#fbbc04"/>
							<path d="M272.1 107.7c38.8-.6 76.3 14 104.4 40.8l77.7-77.7C405 24.6 339.7-.8 272.1 0 169.2 0 75.1 58 28.9 150l90.4 70.1c21.5-64.5 81.8-112.4 152.8-112.4z" fill="#ea4335"/>
						</svg>
						Criar conta com gmail
					<% end %>
					<%= link_to user_facebook_omniauth_authorize_path, data: { controller: 'ripple', 'gtm-action': 'click', 'gtm-category': 'Funil', 'gtm-label': 'Fazer login com facebook' }, class: "ripple ripple-black relative overflow-hidden cursor-pointer shadow-sm border font-semibold inline-flex items-center px-5 py-3 rounded-lg w-full text-gray-700" do %>
						<svg class="w-5 h-5 mr-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 14222 14222" shape-rendering="geometricPrecision" image-rendering="optimizeQuality" fill-rule="nonzero">
							<path d="M14222 7111C14222 3184 11038 0 7111 0S0 3184 0 7111c0 3549 2600 6491 6000 7025V9167H4194V7111h1806V5544c0-1782 1062-2767 2686-2767 778 0 1592 139 1592 139v1750h-897c-883 0-1159 548-1159 1111v1334h1972l-315 2056H8222v4969c3400-533 6000-3475 6000-7025z" fill="#1977f3"/>
							<path d="M9879 9167l315-2056H8222V5777c0-562 275-1111 1159-1111h897V2916s-814-139-1592-139c-1624 0-2686 984-2686 2767v1567H4194v2056h1806v4969c362 57 733 86 1111 86s749-30 1111-86V9167h1657z" fill="#fefefe"/>
						</svg>
						Criar conta com facebook
					<% end %>
				</div>

				<div class="inline-block w-full p-3 mb-10 space-y-3 text-gray-800 border rounded-lg shadow-lg">
					<h2 class="font-semibold text-gray-700">Criar conta com email</h2>

					<div class="text-sm text-gray-600">
						<%= f.label :name, "Nome", {class: ''} %>
						<%= f.text_field :name, autocomplete: "name", required: true, class: 'border px-2 py-2 rounded w-full' %>
					</div>

					<div class="text-sm text-gray-600">
						<%= f.label :email, "Email", {class: ''} %>
						<%= f.email_field :email, autocomplete: "email", required: true, class: 'border px-2 py-2 rounded w-full' %>
					</div>


					<div class="text-sm text-gray-600">
						<%= f.label :password, "Senha (min. 6 caracteres)", {class: ''} %>
						<%= f.password_field :password, autocomplete: "new-password", required: true, class: 'border px-2 py-2 rounded w-full' %>
					</div>

					<div class="text-sm text-gray-600">
						<%= f.label :password_confirmation, "Repita a senha", {class: ''} %>
						<%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, class: 'border px-2 py-2 rounded w-full' %>
					</div>

					<% if Rails.env.production? %>
						<%= recaptcha_v3(action: 'sign_up') %>
					<% end %>
					<div class="select-none">
						<%= f.submit "Enviar", class: 'antialiased bg-green-500 float-right font-semibold px-5 py-2 rounded-full shadow-lg text-white', data: {'gtm-action': 'click', 'gtm-category': 'Funil', 'gtm-label': 'Fazer login com email'} %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</section>
