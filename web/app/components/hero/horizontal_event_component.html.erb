<%= content_tag :div, id: dom_id(@event, :hero), class: helpers.class_names('relative mr-1 mt-6 transition-opacity duration-300'), data: { controller: 'hero--horizontal-event', 'hero--horizontal-event-open-in-sidebar': @open_in_sidebar, 'flip-key': dom_id(@event, :hero) } do %>
	<div data-hero--horizontal-event-target="shadowItem" class="overflow-hidden absolute top-0 right-0 top-1 -right-1 w-32 h-20 rounded-lg opacity-0 transition-all transform bg-gray-200 md:h-28 md:w-48">

	</div>
	<div data-hero--horizontal-event-target="currentItem"
			 class="transition-opacity select-none ">
		<div class="flex justify-between">
			<div class="<%= helpers.class_names('pr-3 flex-1', {}) %>">
				<%= content_tag :a,
												dom_id(@event, 'hero--horizontal-event__link'),
												href:  event_path(@event),
												data:  {
													action:     'click->hero--horizontal-event#openEvent',
													'event-id': @event.id
												},
												class: 'c-h3 inline leading-snug' do %>
					<%= helpers.limit_name_size @event.name, 40 %>
				<% end %>
				<div class="inline text-sm text-gray-700">
					<%= helpers.day_of_week(@event.start_time)&.capitalize %>
					· <%= @event.multiple_hours? ? '+1 horário' : "#{helpers.format_hour(@event.start_time)}h" %> ·
					<span class="text-brand-600"><%= @event&.categories_display_name&.capitalize %> ·</span>
					<%= link_to helpers.limit_place_name_size(@event.place_name, 24)&.titleize, place_path(@event.place), class: 'md:hover:underline capitalize' %>
				</div>
				<div class="font-light hidden md:inline-block mt-2 text-gray-700 text-sm">
					<%= helpers.limit_description_size @event.description, 120 %>
				</div>
			</div>
			<div style="background-color: <%= @event.image_dominant_color %>"
					 class="<%= helpers.class_names('h-20 md:h-28 md:w-48 overflow-hidden rounded-lg border relative w-32',
																					{}) %>">
				<%= link_to event_path(@event),
										id:           dom_id(@event, 'hero--horizontal-event__image'),
										'aria-label': "Ver evento #{@event&.name}",
										data:         {
											action:     'click->hero--horizontal-event#openEvent',
											'event-id': @event.id
										} do %>
					<%= image_tag helpers.shrine_image_url(@event, :feed), {
						class:   'cursor-pointer h-full object-center object-cover w-full overflow-hidden',
						alt:     @event&.name,
						onerror: "this.style.opacity='0'"
					} rescue nil %>
				<% end %>
			</div>
		</div>
		<div class="flex mt-3 space-x-3 flex-wrap">
			<%= content_tag :div, data: { action: 'click->hero--horizontal-event#like', 'event-id': @event.id }, class: 'c-chip' do %>
				<svg class="fill-current stroke-current text-gray-500 w-3" xmlns="http://www.w3.org/2000/svg" data-name="Layer 1" viewBox="0 0 12.04 13.31">
					<path fill="currentColor" stroke="currentColor" d="M11.54 1v11.39a.42.42 0 01-.63.36l-4.7-2.69A.35.35 0 006 10a.31.31 0 00-.19.06l-4.7 2.69a.42.42 0 01-.63-.36V1A.47.47 0 011 .5h10.06a.48.48 0 01.48.5z"/>
				</svg>
				<span class="ml-2">
						Salvar
				</span>
			<% end %>
			<%= content_tag :div, data: { action: 'click->hero--horizontal-event#dislike', 'event-id': @event.id }, class: 'c-chip' do %>
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 stroke-current text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.933 12.8a1 1 0 000-1.6L6.6 7.2A1 1 0 005 8v8a1 1 0 001.6.8l5.333-4zM19.933 12.8a1 1 0 000-1.6l-5.333-4A1 1 0 0013 8v8a1 1 0 001.6.8l5.333-4z"/>
				</svg>
				<span class="ml-1">
						Pular
					</span>
			<% end %>
		</div>
	</div>
<% end %>