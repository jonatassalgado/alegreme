		<div class="flex-1 pr-5">
			<%= content_tag :a,
											id:    dom_id(@event, 'hero--train-event__link'),
											href:  event_path(@event),
											data:  {
												action:     'click->hero--train-event#openEvent',
												'event-id': @event.id
											},
											class: 'font-semibold md:text-lg inline-block leading-snug md:hover:underline text-gray-700' do %>
				<%= @event.name %>
			<% end %>
