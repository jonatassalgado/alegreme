<%= component_controller id: dom_id(@event, :left_sidebar) do %>
	<div class="px-5 py-3 group relative">
		<div class="mb-1 text-sm  text-gray-400">
			<%= helpers.day_of_week(@event.start_time).titlecase %> Â· <%= helpers.format_hour @event.first_day_time %>h
		</div>
		<div class="mb-1 leading-snug text-gray-700 font-semibold">
			<%= content_tag :a,
											href:  event_path(@event),
											data:  {
												action:     'click->left-sidebar--horizontal-event#openEvent',
												url:        event_path(@event),
												'event-id': @event.id
											},
											class: 'md:hover:underline' do %>
				<%= @event.details_name %>
			<% end %>
		</div>
		<%= reflex_tag :unlike, :div, class: 'absolute bottom-0 mt-3 cursor-pointer group-hover:block hidden text-red-500 text-sm underline' do %>
			Remover
		<% end %>
	</div>
<% end %>