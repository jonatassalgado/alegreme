<%= content_tag :div, id: dom_id(@event, :'main-sidebar'), data: { controller: 'main-sidebar--horizontal-event', 'main-sidebar--horizontal-event-open-in-sidebar': @open_in_sidebar }, class: 'transition-opacity group' do %>
	<div class="select-none tap-highlight-none bg-white flex md:mx-0 rounded">
		<div>
			<div data-controller="ripple" class="bg-gray-50 h-16 md:h-28 md:w-48 overflow-hidden relative ripple ripple-white rounded-lg shadow w-24">
				<%= link_to event_path(@event),
										data: {
											'turbo-preserve-scroll': true,
											action:                  'click->main-sidebar--horizontal-event#openEvent',
											'event-id':              @event.id
										} do %>
					<%= image_tag helpers.shrine_image_url(@event, :feed), {
						loading: :lazy,
						alt:     "Cartaz do evento #{@event.name}",
						data:    {
							'event-id': @event.id
						},
						class:   'cursor-pointer object-center object-cover h-full w-full',
						onerror: "this.style.opacity='0'"
					} rescue nil %>
				<% end %>
			</div>
		</div>
		<div class="pl-6">
			<%= content_tag :a,
											href:  event_path(@event),
											data:  {
												'turbo-preserve-scroll': true,
												action:                  'click->main-sidebar--horizontal-event#openEvent',
												'event-id':              @event.id
											},
											class: 'md:text-lg font-semibold md:hover:text-brand-500 mb-1 leading-snug text-gray-700' do %>
				<%= @event.name %>
			<% end %>
			<div class="text-sm md:mt-1 text-gray-500">
				<%= helpers.format_hour @event.start_time %>h ·
				<%= link_to @event&.categories_display_name&.titleize, category_events_path(@event.categories_url), data: { 'turbo-preserve-scroll': true }, class: 'md:hover:text-brand-600' %>
				·
				<%= link_to helpers.limit_place_name_size(@event.place_details_name, 30), place_path(@event.place), data: { 'turbo-preserve-scroll': true }, class: 'md:hover:text-brand-600' %>
			</div>
			<div class="<%= helpers.class_names('flex transition-opacity duration-150 mt-1 mt-3 space-x-1',
																					{ 'md:group-hover:opacity-100  md:opacity-0': !@user&.like_or_dislike?(@event) }) %>">
				<% unless @user&.dislike?(@event) %>
					<%= content_tag :div,
													id:    dom_id(@event, :like),
													data:  {
														action:     'click->main-sidebar--horizontal-event#like',
														'event-id': @event.id,
														component:  'horizontal-event'
													},
													class: 'mr-3 cursor-pointer duration-100 ease-linear flex font-medium group hover:px-3 hover:text-gray-600 items-center justify-center rounded-full select-none tap-highlight-none text-sm transform transition-transform' do %>
						<svg class="<%= helpers.class_names 'group h-5 w-5 stroke-current',
																								{ 'text-gray-500':  !@user&.like?(@event),
																									'text-brand-600': @user&.like?(@event) } %>" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"/>
						</svg>
						<span class="<%= helpers.class_names('ml-1', { 'text-gray-500':  !@user&.like?(@event),
																													 'text-brand-600': @user&.like?(@event) }) %>">
							<%= @user&.like?(@event) ? 'Curti' : 'Curtir' %>
						</span>
					<% end %>
				<% end %>
				<% unless @user&.like?(@event) %>
					<%= content_tag :div,
													id:    dom_id(@event, :dislike),
													data:  {
														action:     'click->main-sidebar--horizontal-event#dislike',
														'event-id': @event.id,
														component:  'horizontal-event'
													},
													class: 'cursor-pointer duration-100 ease-linear flex font-medium group hover:px-3 hover:text-gray-600 items-center justify-center rounded-full select-none tap-highlight-none text-sm transform transition-transform' do %>
						<svg class="<%= helpers.class_names 'h-5 w-5 stroke-current',
																								{ 'text-gray-500 hover:text-gray-600': !@user&.dislike?(@event),
																									'text-red-500':                      @user&.dislike?(@event) } %>" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14H5.236a2 2 0 01-1.789-2.894l3.5-7A2 2 0 018.736 3h4.018a2 2 0 01.485.06l3.76.94m-7 10v5a2 2 0 002 2h.096c.5 0 .905-.405.905-.904 0-.715.211-1.413.608-2.008L17 13V4m-7 10h2m5-10h2a2 2 0 012 2v6a2 2 0 01-2 2h-2.5"/>
						</svg>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
<% end %>